    <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
        <div>
            <ul class="space-y-2">
                {
                    primaryLinks.map(({ label, href }) => (
                        <li>
                            <a href={href}>{label}</a>
                        </li>
                    ))
                }
            </ul>
        </div>

        <div>
            <ul class="space-y-2">
                {
                    secondaryLinks.map(({ label, href }) => (
                        <li>
                            <a href={href}>{label}</a>
                        </li>
                    ))
                }
            </ul>
        </div>
    </div>
</footer>
