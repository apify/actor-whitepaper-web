---
const currentPath = Astro.url.pathname;
const navItems = [
    { label: 'Whitepaper', path: '/whitepaper' },
    { label: 'Vestibulum', path: '/about-actors' },
    { label: 'Sagittis', path: '/get-started' },
    { label: 'Curabitur', path: '/community' },
    { label: 'Contact', path: '/contact' }
];

const isCurrentPage = (path: string) => {
    if (path === '/') {
        return currentPath === path;
    }

    return currentPath.startsWith(path);
};
---

<nav class="fixed top-0 z-50 w-full bg-background-navbar font-medium dark:bg-background-navbar-dark">
    <div class="mx-auto max-w-[1088px] px-8">
        <div class="flex h-16 items-center justify-between">
            <div class="flex items-center">
                <a href="/" class="">Actor Framework</a>
            </div>

            <!-- Desktop Navigation -->
            <div class="hidden md:block">
                <div class="flex items-baseline space-x-2">
                    {
                        navItems.map(({ label, path }) => (
                            <a
                                href={path}
                                class:list={[
                                    'rounded-md px-2',
                                    {
                                        'text-accent dark:text-accent-dark': isCurrentPage(path)
                                    }
                                ]}
                            >
                                {label}
                            </a>
                        ))
                    }
                </div>
            </div>

            <!-- Mobile menu button -->
            <div class="flex md:hidden">
                <button type="button" class="mobile-menu-button -mr-3 inline-flex items-center justify-center" aria-controls="mobile-menu" aria-expanded="false">
                    <span class="sr-only">Open main menu</span>

                    <svg class="mobile-menu-icon h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path class="open" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        <path class="close hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile menu -->
    <div class="mobile-menu hidden md:hidden" id="mobile-menu">
        <div class="space-y-1 px-5 pb-3 pt-2">
            {
                navItems.map(({ label, path }) => (
                    <a
                        href={path}
                        class:list={[
                            'block px-3 py-2',
                            {
                                'text-accent dark:text-accent-dark': isCurrentPage(path)
                            }
                        ]}
                    >
                        {label}
                    </a>
                ))
            }
        </div>
    </div>
</nav>

<script>
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    const openIcon = document.querySelector('.open');
    const closeIcon = document.querySelector('.close');

    mobileMenuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
        openIcon?.classList.toggle('hidden');
        closeIcon?.classList.toggle('hidden');
    });
</script>
