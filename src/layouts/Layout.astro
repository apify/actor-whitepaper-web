---
import { Head } from 'astro-capo';
import BaseHead from '../components/BaseHead.astro';
import HeadingLinks from '../components/HeadingLinks.astro';
import TOC from '../components/TOC.astro';

import '../styles/mdx-content.css';
import '../styles/tailwind.css';
import '../styles/typography.css';

const { title, description, permalink, showTOC = true } = Astro.props;
---

<html lang="en">
    <Head>
        <BaseHead title={title} description={description} permalink={permalink} />
    </Head>

    <body class="flex min-h-screen flex-col bg-background pb-24 dark:bg-background-dark">
        <main class="mx-8">
            <slot />
        </main>

        {
            showTOC && (
                <>
                    <TOC />
                    <HeadingLinks />
                </>
            )
        }

        <script>
            import { smoothScrollTo } from '../utils/scroll';

            document.addEventListener('click', async (e) => {
                const link = e.target as HTMLAnchorElement;

                if (link.tagName === 'A' && link.href) {
                    try {
                        const url = new URL(link.href);
                        const isLocalLink = url.origin === window.location.origin;
                        const hasHash = url.hash.length > 0;

                        if (isLocalLink && hasHash) {
                            e.preventDefault();
                            const targetId = url.hash.substring(1);

                            await smoothScrollTo({
                                targetId,
                                onComplete: () => {
                                    history.pushState(null, '', url.hash);
                                }
                            });
                        }
                    } catch (error) {
                        console.error('Failed to parse URL:', error);
                    }
                }
            });
        </script>
    </body>
</html>
