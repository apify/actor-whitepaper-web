---
import { Head } from 'astro-capo';
import BaseHead from '../components/BaseHead.astro';

import '../styles/tailwind.css';
import '../styles/global.css';

export interface Props {
    title: string;
    description: string;
    permalink: string;
    current?: string;
    opengraph?: string;
    opengraphAlt?: string;
}

const { title, description, permalink, opengraph = '', opengraphAlt = '' } = Astro.props;
---

<html lang="en">
    <Head>
        <BaseHead
            title={title}
            description={description}
            permalink={permalink}
            opengraph={opengraph}
            opengraphAlt={opengraphAlt}
        />
    </Head>

    <body class="grid h-lvh overflow-x-hidden">
        <main>
            <slot />
        </main>
    </body>
</html>
