---
import strings from '../../strings.mjs';
import Layout from '../layouts/Layout.astro';
import FeatureCard from '../components/FeatureCard.astro';
---

<Layout title={strings.title} description={strings.description} permalink={Astro.url.toString()} showTOC={false}>
    <header aria-label="Hero" role="banner" class="-mx-8 h-[100vh] select-none bg-hero">
        <!-- <iframe src="https://my.spline.design/pegboard-b334347be28048a3697082b19ce508d6/" width="100%" height="100%"></iframe> -->
    </header>

    <header class="absolute left-0 top-1/4 flex w-2/3 -translate-y-1/2 select-none flex-col gap-4 rounded-r-2xl bg-index-header p-8 shadow-2xl" role="banner">
        <h1 class="text-balance text-5xl">Vestibulum consequat malesuada felis ornare dignissim</h1>
        <p class="text-balance pb-2 text-3xl">Nullam sagittis vestibulum nunc quis malesuada sem.</p>

        <p>
            <a class="inline-block rounded-md bg-index-header-button px-4 py-2 text-index-header-button-label hover:bg-index-header-button-hover hover:text-index-header-button-label" href="#content" data-smooth-scroll> Learn more </a>
        </p>
    </header>

    <div id="content"></div>

    <section>
        <h1 class="py-10 text-4xl">Praesent Lacinia Magna</h1>

        <div class="grid grid-cols-2 gap-8">
            <FeatureCard
                title="Praesent Lacinia Magna"
                description="Curabitur ullamcorper feugiat vehicula nec lacinia ut dignissim nibh donec ac est faucibus pellentesque."
                link={{
                    href: '#',
                    text: 'Start Experimenting'
                }}
            />

            <FeatureCard
                title="Suspendisse Rhoncus Ipsum"
                description="Maecenas fermentum lacus vitae diam consequat vitae rutrum nisi vehicula proin cursus odio sed neque."
                link={{
                    href: '/whitepaper',
                    text: 'Read the Whitepaper'
                }}
            />
        </div>

        <section class="pt-10">
            <h1 class="py-10 text-4xl">Vestibulum</h1>

            <div class="grid grid-cols-2 gap-8">
                <FeatureCard title="Curabitur Elementum" description='Fusce accumsan tortor ut felis sollicitudin vel efficitur nulla ultricies phasellus feugiat est vel. <a href="#">Nullam ipsum.</a>' />
                <FeatureCard title="Praesent Magna" description="Integer rutrum sem ac metus lobortis vel consectetur nulla facilisis suspendisse rhoncus ipsum." />
                <FeatureCard title="Maecenas Fermentum" description="Vivamus condimentum magna nisi eget aliquam mi efficitur id nulla facilisi orci ut lacus." />
                <FeatureCard title="Suspendisse Potenti" description="Etiam euismod consectetur lectus at finibus morbi mattis ex non lorem convallis ut tempor." />
            </div>
        </section>
    </section>
</Layout>

<script>
    document.querySelectorAll('[data-smooth-scroll]').forEach((link) => {
        link.addEventListener('click', (e) => {
            e.preventDefault();
            const href = link.getAttribute('href');
            document.querySelector(href)?.scrollIntoView({ behavior: 'smooth' });
        });
    });
</script>
